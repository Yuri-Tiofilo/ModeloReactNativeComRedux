{
  "env": {
    "es6": true
  },
  "extends": ["airbnb", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["off", "double"],
    "semi": ["error", "always"],
    "prettier/prettier": "error"
  },
  "ignore": ["react-native"]
}
